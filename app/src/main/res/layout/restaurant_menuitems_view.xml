<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/foodMark"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:src="@drawable/veg_symbol" />

            <TextView
                android:id="@+id/menuItemName"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodMark"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/menuItemCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuItemName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/menuItemd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuItemCategory"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/menuItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuItemd"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/menuItemPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuItemPrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/notAvailableText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuItemPrice2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="* Item not available"
                android:textSize="12sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <Button
                android:id="@+id/addMenuItemBtn"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_below="@+id/notAvailableText"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/menu_item_add_btn_background"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="Add +"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="3dp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/removeMenuItemBtn"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_below="@+id/addMenuItemBtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/menu_item_remove_btn"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:text="Remove -"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>